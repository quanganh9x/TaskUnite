<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Address.
    -->
    <changeSet id="20191123105030-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="address"
                                 constraintName="fk_address_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_information"/>

        <addForeignKeyConstraint baseColumnNames="dictrict_id"
                                 baseTableName="address"
                                 constraintName="fk_address_dictrict_id"
                                 referencedColumnNames="id"
                                 referencedTableName="district"/>

        <addForeignKeyConstraint baseColumnNames="tasker_id"
                                 baseTableName="address"
                                 constraintName="fk_address_tasker_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tasker"/>

    </changeSet>
</databaseChangeLog>
